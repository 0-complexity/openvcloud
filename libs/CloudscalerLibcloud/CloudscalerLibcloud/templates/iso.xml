<volume>
    <name>{{diskname}}</name>
    <source>
        <device path='/dev/sdb1'>
        </device>
    </source>
    <capacity unit='bytes'>{{disksize}}</capacity>
    <allocation unit='bytes'>{{disksize}}</allocation>
    <target>
        <path>{{diskname}}</path>
        <format type='iso'/>
        <permissions>
            <mode>0660</mode>
            <owner>106</owner>
            <group>112</group>
        </permissions>
        <compat>1.1</compat>
    </target>
</volume> 

